<!DOCTYPE html>
<html>
<head>
    <title>Factorial and Fibonacci</title>
</head>
<body>
    <h3>Factorial and Fibonacci Series</h3>

    Enter a number:
    <input type="number" id="num">
    <button onclick="calculate()">Calculate</button>

    <p id="result"></p>

    <script>
        // Function to calculate factorial
        function factorial(n) {
            let fact = 1;
            for (let i = 1; i <= n; i++) {
                fact *= i;
            }
            return fact;
        }

        // Function to generate Fibonacci series
        function fibonacci(n) {
            let a = 0, b = 1;
            let series = "";

            for (let i = 0; i < n; i++) {
                series += a + " ";
                let temp = a + b;
                a = b;
                b = temp;
            }
            return series;
        }

        function calculate() {
            let n = parseInt(document.getElementById("num").value);

            let factResult = factorial(n);
            let fibResult = fibonacci(n);

            document.getElementById("result").innerHTML =
                "Factorial of " + n + " is: " + factResult + "<br>" +
                "Fibonacci Series: " + fibResult;
        }
    </script>
</body>
</html>
